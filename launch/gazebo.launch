<?xml version="1.0"?>
<launch>
<rosparam command="load" file="$(find robosub_simulator)/param/obstacles.yaml"/>
<rosparam command="load" file="$(find robosub_simulator)/param/simulator.yaml"/>
<arg name="world"  default="transdec" doc="String: The name of the world to use. There should be a '.world' file with this name in the 'worlds' directory. Default: transdec"/>
<arg name="gui"  default="true" doc="Bool: Whether or not to show the gzclient window on launch. Default: true"/>
<arg name="minimal"  default="false" doc="Bool: If true, none of the core nodes will be launched with the simulator. Default: false"/>
<arg name="fast" default="true" doc: "Bool: Prevents the vision system from being run to improve performance if true. Default: true"/>

<include file="$(find gazebo_ros)/launch/empty_world.launch">
   <arg name="use_sim_time" value="true"/>
   <arg name="debug" value="false"/>
   <arg name="gui" value="$(arg gui)" />
   <arg name="verbose" value="true"/>
   <arg name="world_name" value="$(find robosub_simulator)/worlds/$(arg world).world"/>
</include>

<node name="virtual_serial_port_sensor" pkg="robosub_simulator" type="create_sensor_vsp.sh" />
<node name="virtual_serial_port_thruster" pkg="robosub_simulator" type="create_thruster_vsp.sh" />
<node name="simulator_bridge" pkg="robosub_simulator" type="simulator_bridge" required="true" />

<!-- launch basic sub software, unless we are just running the minimal simulator-->
<include file="$(find robosub)/launch/core.launch" unless="$(arg minimal)">
    <arg name="simulated" value="true"/>
    <arg name="fast" value="$(arg fast)"/>
</include>

<rosparam command="load" file="$(find robosub_simulator)/param/cobalt_sim.yaml"/>
</launch>
